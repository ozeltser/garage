# Environment variables for the Garage App
# Copy this file to .env and customize for your environment
# SECURITY WARNING: Never commit the .env file to version control!

# Flask configuration
# IMPORTANT: Generate a strong SECRET_KEY for production using:
#   python3 -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Application settings
APP_HOST=0.0.0.0
APP_PORT=5000

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=garage_app
DB_USER=garage_user
# IMPORTANT: Use a strong, unique password for production
DB_PASSWORD=your-secure-database-password

# Optional SSL/TLS configuration for database connections
# Recommended for production. Download CA certificate from your database provider
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# Database Connection Pool Settings (optional)
# Minimum number of idle connections to keep in pool
DB_POOL_MIN_SIZE=1
# Maximum number of connections in pool
DB_POOL_MAX_SIZE=10
# Maximum idle time for connections in seconds (default: 300 = 5 minutes)
DB_POOL_MAX_IDLE=300
# Maximum number of times a connection can be reused (0 = unlimited)
DB_POOL_MAX_USAGE=0

# Default admin credentials (used only for initial setup)
# IMPORTANT: Change these immediately after first login!
# Use a unique username (not 'admin') for better security
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=secure-initial-password